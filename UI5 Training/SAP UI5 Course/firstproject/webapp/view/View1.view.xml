<mvc:View controllerName="firstproject.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
 <Shell id="shell1">
 <App id="app1"> 
   <pages>
    <Page id="page" title="{i18n>title}">
        <content>
        <Button id="button2" text="{i18n>appDescription}" press=".testI18n"/>
        <Panel id="panel1" headerText="Buttons">
         <Label id="label1" text="Name" labelFor="nameInput" />
        <Input
			id="Input1"
			class="sapUiSmallMarginBottom"
			placeholder="Change Button text here"
			valueStateText="Name must not be empty. Maximum 10 characters."
			value="{customModel>/key}"/>
        <Button id="button1" text="{customModel>/key}" press=".onChangeText" />
        </Panel>
        </content>
    </Page>
   </pages>
   </App>
</Shell>
</mvc:View>
